<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray"
    tools:context=".pointsFragment">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="50dp"
        android:background="@color/yellow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

<!--        <ImageView-->
<!--            android:id="@+id/faqIcon"-->
<!--            android:layout_width="24dp"-->
<!--            android:layout_height="24dp"-->
<!--            android:layout_gravity="center_vertical"-->
<!--            android:src="@drawable/ic_faq"-->
<!--            android:contentDescription="FAQ Icon" />-->

        <TextView
            android:id="@+id/headerText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Welcome to Plus Rewards"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


        <!--        <ImageView-->
<!--            android:id="@+id/settingsIcon"-->
<!--            android:layout_width="24dp"-->
<!--            android:layout_height="24dp"-->
<!--            android:layout_gravity="center_vertical"-->
<!--            android:src="@drawable/ic_settings"-->
<!--            android:contentDescription="Settings Icon" />-->
    </LinearLayout>

    <!-- Points Section -->
    <LinearLayout
        android:id="@+id/pointsSection"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/card_background_points"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/header"
        android:layout_marginTop="110dp">

        <TextView
            android:id="@+id/pointsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Points"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/pointsValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2,000"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/pointsEquivalent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equals $250"
            android:textSize="14sp"
            android:textColor="@color/grey" />
    </LinearLayout>

    <!-- Earn and Redeem Section -->
    <LinearLayout
        android:id="@+id/earnRedeemSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/pointsSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/card_background_points">

            <ImageView
                android:id="@+id/earnIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/account"
                android:contentDescription="Earn Icon" />

            <TextView
                android:id="@+id/earnLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Earn"
                android:textSize="16sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/card_background_points">

            <ImageView
                android:id="@+id/redeemIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/account"
                android:contentDescription="Redeem Icon" />

            <TextView
                android:id="@+id/redeemLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Redeem"
                android:textSize="16sp"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

    <!-- Progress Section -->
    <LinearLayout
        android:id="@+id/progressSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/earnRedeemSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/levelLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gold (Level 3)"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <ProgressBar
            android:id="@+id/levelProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="55"
            android:progressTint="@color/green"
            style="?android:attr/progressBarStyleHorizontal" />
    </LinearLayout>

    <!-- Refer Friends Section -->
    <LinearLayout
        android:id="@+id/referFriendsSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/progressSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/referLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refer Your Friends"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/referDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You get $20 Coupon\nThey get Free Shipping Coupon"
            android:textSize="14sp"
            android:textColor="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <EditText
                android:id="@+id/referLink"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="https://www.greatsite.com/..."
                android:background="@drawable/custom_rounded_corner_details"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:inputType="text" />

            <Button
                android:id="@+id/copyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Copy"
                android:backgroundTint="@color/yellow"
                android:textColor="@color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/referFriendsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have referred 0 friends"
            android:textSize="14sp"
            android:textColor="@color/grey"
            android:paddingTop="8dp" />
    </LinearLayout>

    <!-- Navigation bar -->
    <LinearLayout
        android:id="@+id/bottomLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:padding="10dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/home"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:contentDescription="Home Image"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/home" />

            <TextView
                android:id="@+id/homeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Home"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/points"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:contentDescription="Points Image"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/star" />

            <TextView
                android:id="@+id/pointsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Points"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/cart_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:contentDescription="Cart Image"
                android:padding="12dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/shoppingcartimg" />

            <TextView
                android:id="@+id/carttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Cart"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/account"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:contentDescription="Account Image"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/account" />

            <TextView
                android:id="@+id/accountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Account"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
