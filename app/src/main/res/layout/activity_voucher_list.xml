<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoucherListActivity">


        <TextView
            android:id="@+id/voucherTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voucher Title"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/voucherDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voucher Description"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/voucherTitle"
            app:layout_constraintStart_toStartOf="@+id/voucherTitle"/>

        <TextView
            android:id="@+id/voucherExpiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expires on: 12/31/2024"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/voucherDescription"
            app:layout_constraintStart_toStartOf="@+id/voucherDescription"/>
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ticket"
            app:layout_constraintTop_toBottomOf="@+id/voucherTitle"
            app:layout_constraintStart_toStartOf="@+id/voucherTitle"/> />


</androidx.constraintlayout.widget.ConstraintLayout>